<!-- create shared network -->
docker network create -d bridge mynet

<!-- create docker volume for DB -->
docker volume create dbvol

<!-- create DB, run on mynet with DB hostname -->
docker run -d -p 3306:3306 -v dbvol:/var/lib/mysql --network mynet --name mydb stackupiss/northwind-db:v1

<!-- create app, run on mynet with all env variables -->
<!-- DB_HOST is the database server
DB_USER is root
DB_PASSWORD is changeit -->
docker run -d -p 3000:3000 -e DB_HOST=mydb -e DB_USER=root -e DB_PASSWORD=changeit --network mynet --name myapp stackupiss/northwind-app:v1

<!-- access with docker host IP -->
docker ps -a
docker inspect c0c51c8d3b03
curl 172.20.0.3:3000